<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="285dp"
            android:layout_height="48dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="Электронная почта"
            android:fontFamily="@font/play_regular"
            android:textSize="20dp"
            android:id="@+id/userEmail"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="54dp"
            android:layout_marginEnd="54dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="344dp"/>


    <EditText
            android:layout_width="282dp"
            android:layout_height="44dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Пароль"
            android:fontFamily="@font/play_regular"
            android:textSize="20dp"
            android:id="@+id/userPass"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="55dp"
            android:layout_marginEnd="56dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="418dp"/>
    <Button
            android:text="ВОЙТИ"
            app:cornerRadius="28px"
            android:fontFamily="@font/play_regular"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/toLogInButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="242dp"
            android:layout_marginEnd="63dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="481dp"/>
    <TextView
            android:text="Нет аккаунта?"
            android:textAlignment="center"
            android:layout_width="123dp"
            android:layout_height="25dp" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="146dp"
            android:layout_marginEnd="147dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="91dp"
            app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="ЗАРЕГИСТРИРУЙТЕСЬ"
            android:textColor="#6200ee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/toRegisterButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            app:iconTint="#453E3E" app:strokeColor="#980F0F" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="103dp" android:layout_marginEnd="104dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@drawable/error" android:id="@+id/errorSign"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="304dp" android:layout_marginEnd="319dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Ошибка авторизации. Проверьте правильность ввода данных."
            android:fontFamily="@font/play_regular"

            android:layout_width="266dp"
            android:layout_height="43dp" android:id="@+id/errorMessage"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="294dp" android:layout_marginEnd="38dp" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>