<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".toRegisterActivity"
        android:background="@drawable/bg_light">

    <RelativeLayout android:layout_width="343dp"
                    android:layout_height="392dp"
                    android:background="@drawable/light_rounded_back"
                    android:layout_marginTop="120dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="35dp"
                    app:layout_constraintStart_toStartOf="parent">

        <TextView
                android:text="Регистрация пользователя GO PLAN"
                android:fontFamily="@font/play_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/regText"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="50dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="22dp"/>

    </RelativeLayout>


    <EditText
            android:layout_width="295dp"
            android:layout_height="51dp"
            android:inputType="textPassword"
            android:fontFamily="@font/play_regular"
            android:textSize="20dp"
            android:ems="10"
            android:id="@+id/signUpPassword"
            android:hint="Пароль"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="364dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"/>
    <Button
            android:text="ПОДТВЕРДИТЬ"
            android:fontFamily="@font/play_regular"
            android:textSize="16dp"
            android:layout_width="287dp"
            android:layout_height="58dp" android:id="@+id/regButton"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="560dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"/>
    <EditText
            android:layout_width="295dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:hint="Имя пользователя"
            android:fontFamily="@font/play_regular"
            android:textSize="20dp"
            android:ems="10"
            android:id="@+id/signUpName"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="424dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"/>

    <EditText
            android:layout_width="295dp"
            android:layout_height="54dp"
            android:inputType="textEmailAddress"
            android:hint="Электронная почта"
            android:fontFamily="@font/play_regular"
            android:textSize="20dp"
            android:ems="10"
            android:id="@+id/signUpEmail"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="300dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"/>
    <EditText
            android:layout_width="295dp"
            android:layout_height="43dp"
            android:inputType="phone"
            android:hint="Номер телефона"
            android:fontFamily="@font/play_regular"
            android:textSize="20dp"
            android:ems="10"
            android:id="@+id/signUpPhone" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="248dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"/>
    <ImageView
            android:layout_width="32dp"
            android:layout_height="33dp" app:srcCompat="@drawable/previous" android:id="@+id/backImg"
            android:onClick="goBack"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>